{
  "manifest_version": 3,
  "name": "AUDIT",
  "version": "1.0.0",
  "description": "Automatically generate an iCal file for your University of Adelaide timetable",
  "icons": {
    "128": "icons/icon.png"
  },
  "action": {
    "default_icon": "icons/icon.png",
    "default_title": "AUDIT",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://myadelaide.uni.adelaide.edu.au/**"
      ],
      "js": [
        "main.js"
      ],
      "css": [
        "css/style.css"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "webNavigation",
    "webRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "main.js",
        "style.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}