{
  "manifest_version": 3,
  "name": "Uni CalSync",
  "version": "0.0.1",
  "description": "Automatically generate a .ical/.ics file for your uni timetable",
  "icons": {
    "128": "icons/icon.png"
  },
  "action": {
    "default_icon": "icons/icon.png",
    "default_title": "CalSync",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.adelaide.edu.au/**"
      ],
      "js": [
        "main.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ],
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "webNavigation",
    "storage",
    "tabs",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "main.js",
        "style.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}