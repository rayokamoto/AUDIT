{
  "manifest_version": 3,
  "name": "Uni CalSync",
  "version": "0.0.1",
  "description": "Automatically generate a .ical/.ics file for your uni timetable",
  "browser_specific_settings": {
    "gecko": {
      "id": "{CE7EA5DB-E53A-45C8-B02E-FF2E9B85DF9A}"
             }
      },
  "icons": {
    "128": "icons/icon.png"
  },
  "action": {
    "default_icon": "icons/icon.png",
    "default_title": "CalSync",
    "default_popup": "popup.html"  
  },
  "background": {
    "scripts": [
      "background/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.adelaide.edu.au/**"
      ]
    }
  ],
  "permissions": [
    "storage",
    "webNavigation",
    "webRequest",
    "webRequestBlocking"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "main.js"
        ],
      "matches": [
        "*://*.adelaide.edu.au/**"
      ]
    }
  ]
}
