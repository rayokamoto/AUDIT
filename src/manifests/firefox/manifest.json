{
  "manifest_version": 3,
  "name": "AUDIT",
  "version": "1.0.0",
  "description": "Automatically generate an iCal file for your University of Adelaide timetable",
  "browser_specific_settings": {
    "gecko": {
      "id": "{189CF325-21D2-4D28-BFF4-34044DEE6AB7}"
    }
  },
  "icons": {
    "128": "icons/icon.png"
  },
  "action": {
    "default_icon": "icons/icon.png",
    "default_title": "AUDIT",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.adelaide.edu.au/**"
      ]
    }
  ],
  "permissions": [
    "storage",
    "webNavigation",
    "webRequest",
    "webRequestBlocking"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "main.js"
      ],
      "matches": [
        "*://*.adelaide.edu.au/**"
      ]
    }
  ]
}